<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 그라데이션 테두리 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#8FE1C3"
                android:centerColor="#7FDCBA"
                android:endColor="#31C690"
                android:type="linear" />
            <corners android:radius="24dp" />
            <stroke android:width="3dp" android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- 흰색 배경 -->
    <item android:left="3dp" android:right="3dp" android:top="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="24dp" />
        </shape>
    </item>

</layer-list>
