<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.aos.floney.view.book.setting.excel.BookSettingExcelViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_bottom_sheet"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_sheet_book_setting_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bottom_sheet_book_setting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="엑셀 내보내기"
                android:textColor="@color/grayscale1"
                android:textSize="19dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="19dp"
                android:background="@{vm.flow == `이번달` ? @drawable/custom_solid_white_radius_49_stroke_primary_2 : @drawable/custom_solid_background2_radius_49}"
                android:fontFamily="@font/pretendard_semibold"
                android:gravity="center"
                android:onClick="@{() -> vm.onClickFlow(`이번달`)}"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp"
                android:text="이번달"
                android:textColor="@{vm.flow == `이번달` ? @color/primary2 : @color/grayscale6}"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_book_setting_title" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="18dp"
                android:background="@{vm.flow == `저번달` ? @drawable/custom_solid_white_radius_49_stroke_primary_2 : @drawable/custom_solid_background2_radius_49}"
                android:fontFamily="@font/pretendard_semibold"
                android:gravity="center"
                android:onClick="@{() -> vm.onClickFlow(`저번달`)}"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp"
                android:text="저번달"
                android:textColor="@{vm.flow == `저번달` ? @color/primary2 : @color/grayscale6}"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_book_setting_title" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="18dp"
                android:background="@{vm.flow == `올해` ? @drawable/custom_solid_white_radius_49_stroke_primary_2 : @drawable/custom_solid_background2_radius_49}"
                android:fontFamily="@font/pretendard_semibold"
                android:gravity="center"
                android:onClick="@{() -> vm.onClickFlow(`올해`)}"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp"
                android:text="올해"
                android:textColor="@{vm.flow == `올해` ? @color/primary2 : @color/grayscale6}"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_book_setting_title" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="18dp"
                android:background="@{vm.flow == `작년` ? @drawable/custom_solid_white_radius_49_stroke_primary_2 : @drawable/custom_solid_background2_radius_49}"
                android:fontFamily="@font/pretendard_semibold"
                android:gravity="center"
                android:onClick="@{() -> vm.onClickFlow(`작년`)}"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp"
                android:text="작년"
                android:textColor="@{vm.flow == `작년` ? @color/primary2 : @color/grayscale6}"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_book_setting_title" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@{vm.flow == `전체` ? @drawable/custom_solid_white_radius_49_stroke_primary_2 : @drawable/custom_solid_background2_radius_49}"
                android:fontFamily="@font/pretendard_semibold"
                android:gravity="center"
                android:onClick="@{() -> vm.onClickFlow(`전체`)}"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp"
                android:text="전체"
                android:textColor="@{vm.flow == `전체` ? @color/primary2 : @color/grayscale6}"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/textView9"
                app:layout_constraintTop_toTopOf="@+id/textView9" />


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="156dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/custom_radius_12_solid_primary1"
                android:fontFamily="@font/pretendard_bold"
                android:onClick="@{() -> vm.onClickAddComplete()}"
                android:text="내보내기"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>