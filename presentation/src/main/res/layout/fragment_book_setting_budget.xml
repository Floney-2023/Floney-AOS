<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.aos.model.book.UiBookBudgetModel" />
        <variable
            name="vm"
            type="com.aos.floney.view.book.setting.BookSettingBudgetViewModel" />
        <variable
            name="eventHolder"
            type="com.aos.model.book.UiBookBudgetModel.OnItemClickListener"/>
        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.book.setting.BookSettingActivity">

        <ImageView
            android:id="@+id/iv_icon_exit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:onClick="@{() -> vm.onClickedExit()}"
            android:padding="5dp"
            android:src="@drawable/icon_chevron_left"
            app:layout_constraintBottom_toBottomOf="@+id/tv_budget_see_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_budget_see_title" />

        <TextView
            android:id="@+id/tv_budget_see_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/floney_pretendard_bold"
            android:text="@string/book_setting_budget_title"
            android:textAppearance="@style/mypage_inform_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/iv_select_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:src="@drawable/icon_year_picker"
            app:layout_constraintEnd_toEndOf="@+id/tv_budget_select_view"
            app:layout_constraintTop_toBottomOf="@+id/tv_budget_see_title" />

        <TextView
            android:id="@+id/tv_select_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@{vm.year}"
            android:textColor="@color/black"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_select_year"
            app:layout_constraintStart_toStartOf="@+id/iv_select_year"
            app:layout_constraintTop_toTopOf="@+id/iv_select_year" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tv_budget_select_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_select_year"
            bind:diffCallback="@{(Object)UiBookBudgetModel.Companion}"
            bind:eventHolder="@{eventHolder}"
            bind:itemLayout="@{@layout/item_book_setting_budget_view}"
            bind:items="@{vm.budgetList.budgetList}"
            bind:viewModel="@{vm}" />

        <ImageView
            android:id="@+id/iv_empty_view"
            android:layout_width="80dp"
            android:layout_height="86dp"
            android:src="@drawable/icon_settlement_see"
            android:visibility="@{vm.budgetList.budgetList.size() > 0 ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_budget_see_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>