<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.history.memo.InsertMemoFragment">

    <data>
        <variable
            name="vm"
            type="com.aos.floney.view.history.memo.InsertMemoViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/icon_back_black"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/iv_back"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메모"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/grayscale1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_back"
            app:layout_constraintBottom_toBottomOf="@id/iv_back"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="472dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/iv_back"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="32dp"
            android:gravity="left|top"
            android:paddingTop="16dp"
            android:textSize="14sp"
            android:text="@={vm.insertMemoValue}"
            android:id="@+id/et_insert_memo"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/grayscale7"
            android:paddingStart="20dp"
            android:hint="메모를 입력하세요."
            android:background="@drawable/custom_radius_12_solid_greyscale_12_stroke_greyscale_10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* 최대 1,000자까지 쓸 수 있어요."
            app:layout_constraintStart_toStartOf="@id/et_insert_memo"
            app:layout_constraintTop_toBottomOf="@id/et_insert_memo"
            android:layout_marginTop="14dp"
            android:textSize="12sp"
            android:textColor="@color/grayscale6"
            android:fontFamily="@font/pretendard_medium"/>
        
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="66dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/black"
            android:text="작성 저장하기"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_bold"
            android:textSize="14sp"/>
        
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>