<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.aos.floney.view.settleup.SettleUpStartViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.book.add.BookAddInviteCheckFragment">

        <TextView
            android:id="@+id/tv_settle_up_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="@string/settle_up_start"
            android:textColor="@color/grayscale1"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_settle_up_start_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/pretendard_bold"
            android:lineSpacingMultiplier="1.2"
            android:text="@{@string/settle_up_start_title(vm.lastDay)}"
            android:textColor="@color/grayscale1"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_settle_up_start" />

        <TextView
            android:id="@+id/tv_settle_up_start_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="@string/settle_up_start_info"
            android:textColor="@color/grayscale6"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="@id/tv_settle_up_start_title"
            app:layout_constraintTop_toBottomOf="@id/tv_settle_up_start_title" />

        <ImageView
            android:id="@+id/iv_settle_up_start"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/icon_settle_up_start"
            app:layout_constraintBottom_toTopOf="@+id/btn_settle_up_start_button"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_settle_up_start_info" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_settle_up_start_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/custom_radius_12_solid_primary1"
            android:fontFamily="@font/pretendard_bold"
            android:onClick="@{() -> vm.onClickedSettleUpStart()}"
            android:text="@string/settle_up_start_button"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_settle_up_start_see"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_settle_up_start" />

        <TextView
            android:id="@+id/tv_settle_up_start_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/pretendard_regular"
            android:onClick="@{() -> vm.onClickedSettleUpSee()}"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:clickable="true"
            android:paddingEnd="8dp"
            android:text="@string/settle_up_start_see_button"
            android:textColor="@color/grayscale6"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:focusable="true" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>