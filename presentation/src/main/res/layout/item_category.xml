<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.aos.model.book.UiBookCategory" />

        <variable
            name="eventHolder"
            type="com.aos.model.book.UiBookCategory.OnItemClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:onClick="@{() -> eventHolder.onItemClick(item)}"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="@color/grayscale6"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@{item.name}"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="14sp"
            android:background="@drawable/custom_solid_background2_radius_49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>