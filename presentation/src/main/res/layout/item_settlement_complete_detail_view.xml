<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.aos.model.settlement.Details" />

        <variable
            name="eventHolder"
            type="com.aos.model.settlement.UiSettlementAddModel.OnItemClickListener" />
        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="32dp"
            android:layout_height="32dp"
            setImageToUrl="@{item.useruserProfileImg}"
            android:background="@drawable/background_circle_image"
            android:clipToOutline="true"
            android:layout_marginStart="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_outcomes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_check"
            app:layout_constraintStart_toEndOf="@+id/iv_check"
            app:layout_constraintTop_toTopOf="@+id/iv_check">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semibold"
                android:text="@{item.userNickname}"
                android:textColor="@color/grayscale2"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_settle_up_complete_settlement_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="@{item.moneyInfo.equals(`정산할 금액이 없어요.`) ? `` : item.money}"
                android:textColor="@color/grayscale2"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_name" />

            <TextView
                android:id="@+id/tv_settle_up_complete_settlement_money_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:text="@{item.moneyInfo}"
                android:textColor="@color/grayscale2"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_settle_up_complete_settlement_money"
                app:layout_constraintStart_toEndOf="@+id/tv_settle_up_complete_settlement_money"
                app:layout_constraintTop_toTopOf="@+id/tv_settle_up_complete_settlement_money"
                bind:setLayoutMargin="@{item.moneyInfo.equals(`정산할 금액이 없어요.`) ? 0f : 4f}" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>