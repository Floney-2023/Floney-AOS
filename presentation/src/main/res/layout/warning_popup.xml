<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/background_bottom_sheet"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="28dp"
        android:paddingEnd="20dp"
        android:paddingBottom="28dp">

        <ImageView
            android:id="@+id/iv_popup_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="14dp"
            android:src="@drawable/item_red_exit_popup"/>

        <TextView
            android:id="@+id/tv_popup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:fontFamily="@font/floney_pretendard_bold"
            android:textSize="16dp"
            android:textColor="@color/grayscale1" />

        <TextView
            android:id="@+id/tv_popup_info"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/floney_pretendard_regular"
            android:gravity="center"
            android:lineSpacingExtra="3sp"
            android:translationY="-1.34sp"
            android:layout_marginBottom="24dp"
            android:textSize="13dp"
            android:textColor="@color/grayscale1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_left"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_radius_10_solid_background_2"
                android:fontFamily="@font/pretendard_medium"
                android:textAllCaps="false"
                android:textSize="12dp"
                android:textColor="@color/white" />

            <View
                android:id="@+id/view_padding"
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_right"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:background="@drawable/onboard_area1"
                android:fontFamily="@font/pretendard_semibold"
                android:textAllCaps="false"
                android:textSize="12dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</layout>
